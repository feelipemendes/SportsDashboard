<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sports Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <header>
        <h1>NATIVE STATS</h1>
        <button id="register">Register</button>
        <button id="login">Login</button>
    </header>

    <main>
        <div class="switcher">
            <button id="recent-matches">Recent Matches</button>
            <button id="upcoming-matches">Upcoming Matches</button>
        </div>
        @RenderBody()
        <div class="carousel-container">
            <div class="carousel" id="carousel">
                <!-- Os cards serão injetados aqui via JavaScript -->
            </div>
            <button class="prev" onclick="moveCarousel(-1)">❮</button>
            <button class="next" onclick="moveCarousel(1)">❯</button>
        </div>
    </main>

    <script src="~/js/site.js"></script>
</body>
</html>
